--Seleciona todos os registros ordenando pelo Nome em ordem decrscebte (DESC), mas poderia ser por crescente (ASC)
SELECT *
FROM person.person
ORDER BY FirstName DESC, LastName ASC;


--Desafio selecione os 10 produtos mais caros
SELECT TOP 10 *
FROM production.product
ORDER BY ListPrice DESC;


--Selecione quiem tem productid entre 1 e 4
SELECT TOP 4 *
FROM production.product
ORDER BY ProductID ASC;
